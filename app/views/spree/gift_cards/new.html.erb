<h1><%= t(:gift_card) %></h1>
<%= render "spree/shared/error_messages", :target => @gift_card %>
<p>Bitte wählen Sie einen Wert für den Gutschein</p>
<%= form_for @gift_card do |f| %>
  <p>
    <%= f.label :variant_id, t(:value) %>
    <span class="required">*</span><br/>
    <%= f.select :variant_id, @gift_card_variants.map { |variant| [money(variant.price), variant.id] } %>
  </p>
  <%= f.submit t(:add_to_cart) %>
<% end %>
